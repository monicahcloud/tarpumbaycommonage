generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Application {
  id         String   @id @default(cuid())
  // basic fields for v1 (add more later)
  firstName  String
  lastName   String
  email      String
  phone      String?
  dob        DateTime?
  address    String?
  ancestry   String?   // free text for now (parent/grandparent info)
  purpose    String
  signature  String?   // dataURL string (optional)
  status     AppStatus @default(SUBMITTED)

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

enum AppStatus {
  SUBMITTED
}
